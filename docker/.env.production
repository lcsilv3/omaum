# Exemplo de .env para produção OMAUM
# Copie este arquivo para docker/.env.production e ajuste os valores conforme seu ambiente

# Chave secreta forte (mínimo 50 caracteres, aleatória)
SECRET_KEY=coloque_uma_chave_aleatoria_bem_grande_aqui_Exemplo_!@#4f8G7h9JkLmN0pQwErTyUiOpZxCvBnM1234567890

# Hosts permitidos (separados por vírgula, sem espaços)
ALLOWED_HOSTS=omaum.seudominio.com,localhost,127.0.0.1

# Configurações de segurança recomendadas para produção
SECURE_HSTS_SECONDS=31536000
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_REFERRER_POLICY=same-origin
SECURE_CROSS_ORIGIN_OPENER_POLICY=same-origin
SECURE_SSL_REDIRECT=True

# Outras variáveis de ambiente importantes
DEBUG=False
DJANGO_SETTINGS_MODULE=omaum.settings.production

# Banco de dados, Redis, Email etc. (ajuste conforme seu ambiente)
DATABASE_URL=postgres://usuario:senha@db:5432/omaum
REDIS_URL=redis://redis:6379/0
EMAIL_HOST=smtp.seudominio.com
EMAIL_HOST_USER=usuario@seudominio.com
EMAIL_HOST_PASSWORD=senha
EMAIL_PORT=587
EMAIL_USE_TLS=True
